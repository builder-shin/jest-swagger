{
  "name": "jest-swagger",
  "version": "0.1.0",
  "description": "Jest 테스트에서 Swagger/OpenAPI 문서를 자동 생성하는 TypeScript 라이브러리",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jest-swagger": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts --quiet",
    "lint:all": "eslint src examples --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "jest",
    "swagger",
    "openapi",
    "api",
    "testing",
    "documentation",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fastify/cors": "^11.1.0",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/joi": "^17.2.2",
    "commander": "^14.0.2",
    "joi": "^18.0.2",
    "yaml": "^2.3.4",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.25.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
